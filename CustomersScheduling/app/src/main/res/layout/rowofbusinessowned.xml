<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/leftblock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/businessName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/clients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Clients"
            android:textSize="10dp"
            android:layout_toLeftOf="@+id/pendentRequests"
            android:layout_toStartOf="@+id/pendentRequests"/>

        <Button
            android:id="@+id/pendentRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:textSize="10dp"
            android:layout_toLeftOf="@+id/editBusinessInfo"
            android:layout_toStartOf="@+id/editBusinessInfo"
            android:text="@string/multilines" />
        <Button
            android:id="@+id/editBusinessInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/editBusinessInfo" />
    </RelativeLayout>

</RelativeLayout>
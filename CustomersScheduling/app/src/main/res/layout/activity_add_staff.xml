<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ps.isel.customersscheduling.Activities.requestsDone.RegisterStoreActivity">

    <include
        android:id="@+id/filter_toolbar"
        layout="@layout/toolbarwithbackarrow"></include>

    <RelativeLayout
        android:id="@+id/editTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_toolbar">

        <EditText
            android:id="@+id/employeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/begginLunch"
            android:cursorVisible="false"
            android:hint="Employee Name" />

        <EditText
            android:id="@+id/employeeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/employeeName"
            android:cursorVisible="false"
            android:hint="Employee Email" />

        <EditText
            android:id="@+id/employeeContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/employeeEmail"
            android:cursorVisible="false"
            android:hint="Employee Phone Number" />

        <EditText
            android:id="@+id/employeeGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/employeeContact"
            android:cursorVisible="false"
            android:hint="Gender: 0 for Female 1 for Male" />

        <Button
            android:id="@+id/registerEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:text="@string/registerEmployee"
            android:textSize="20dp" />


    </RelativeLayout>
</RelativeLayout>
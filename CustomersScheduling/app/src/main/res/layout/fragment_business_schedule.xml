<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".Fragments.BusinessRegistrationFragments.BusinessScheduleFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbarwithbackarrow"></include>

    <RelativeLayout
        android:id="@+id/editTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">

        <EditText
            android:id="@+id/begginHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:cursorVisible="false"
            android:hint="Start Hour (Ex: 10:00)" />

        <EditText
            android:id="@+id/begginLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/begginHour"
            android:cursorVisible="false"
            android:hint="Lunch Time Start (Ex: 10:00)" />

        <EditText
            android:id="@+id/endLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/begginLunch"
            android:cursorVisible="false"
            android:hint="Lunch Time End (Ex: 10:00)" />

        <EditText
            android:id="@+id/endHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/endLunch"
            android:cursorVisible="false"
            android:hint="end Hour (Ex: 10:00)" />



        <CheckBox
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            android:layout_below="@id/endHour"/>

        <CheckBox
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/monday"
            android:layout_toRightOf="@+id/monday"
            android:text="@string/tuesday"
            android:layout_below="@id/endHour"/>

        <CheckBox
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tuesday"
            android:layout_toRightOf="@+id/tuesday"
            android:text="@string/wednesday"
            android:layout_below="@id/endHour"/>

        <CheckBox
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/wednesday"
            android:layout_toRightOf="@+id/wednesday"
            android:text="@string/sunday"
            android:layout_below="@id/endHour"/>

        <CheckBox
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/thursday"
            android:layout_toRightOf="@+id/thursday"
            android:text="@string/friday"
            android:layout_below="@id/endHour"/>

        <CheckBox
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/friday"
            android:layout_toRightOf="@+id/friday"
            android:text="@string/saturday"
            android:layout_below="@id/endHour"/>

        <CheckBox
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/saturday"
            android:layout_toRightOf="@+id/saturday"
            android:text="@string/sunday"
            android:layout_below="@id/endHour"/>

        <Button
            android:id="@+id/registerSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:text="Register Schedule"
            android:textSize="20dp" />

    </RelativeLayout>

</RelativeLayout>